{
    "languageserver": {
        "gluon": {
            "command": "gluon_language-server",
            "filetypes": [
                "gluon"
            ]
        }
    },
    "jedi.startupMessage": false,
    "python.formatting.provider": "yapf",
    "git.addGBlameToBufferVar": true,
    "git.enableGlobalStatus": true,
    "markdownlint.config": {
        "default": true,
        "line_length": false
    }
}
