# vim: filetype=neomuttrc

# set editor to neovim
set editor = "nvim"
set sendmail="/usr/bin/msmtp"

set my_name = "Tom Almeida"
set imap_check_subscribed # check all subscribed folders

set envelope_from
set edit_headers # show headers when composing
set fast_reply # skip to composing when replying
set askcc
set fcc_attach # save attachments within the body
set forward_format = "Fwd: %s"
set forward_decode # decode when forwarding
set attribution = "On %d, %n wrote:" # format of quoting header
set reply_to # reply to Reply to: field
set reverse_name # reply as whoever the email was sent to
set include # include message in replies
set forward_quote # include message in forwards
set text_flowed # set the text to be flowed - soft and hard line breaks are distinguished

unset mime_forward # Forwarded attachments are a part of the body
unset help # I don't want to see the help bar

unset confirmappend # Yes, I'm sure I want to move folders
set quit # Don't ask before quitting
unset mark_old # I don't need to see "old" mail. Just new/read is good enough for me
set beep_new # bell on new mail
set pipe_decode # strip headers and eval mimes when piping
set thorough_search # strip headers and eval mimes when searching

# status bar, date format, finding stuff etc.
set status_chars = " *%A"
set status_format = "[ Folder: %f ] [%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)?%?F? (%F flagged)?%?l? %l? ] ─ (%s/%S)%>─%?p?( %p postponed )?"
set date_format = "%d.%m.%Y %H:%M"
set sort = threads
set sort_aux = reverse-last-date-received
set uncollapse_jump
set sort_re
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
set send_charset = "utf-8:iso-8859-1:us-ascii"
set charset = "utf-8"
set arrow_cursor = "no" # Change `color indicator` depending 

# Pager View Options
set pager_index_lines = 10  # Shows 10 lines of index when pager is active
set pager_context = 3
set pager_stop
set menu_scroll
set tilde
unset markers

set header_cache = ~/.cache/mutt_headers
set message_cachedir = ~/.cache/mutt

auto_view text/html text/calendar application/ics
alternative_order text/flowed text/plain text/enriched text/html text/*

set query_command = "khard email --parsable --search-in-source-files '%s'"

set sidebar_format = "%D%* %S"

set wait_key=no
